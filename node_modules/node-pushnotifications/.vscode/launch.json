    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "${workspaceRoot}/test",
                "--compilers",
                "jsx:babel-core/register",
                "--recursive",
                "--colors",
                "--no-timeouts"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "stopOnEntry": false,
            "runtimeExecutable": null,
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Programm starten",
            "program": "${workspaceRoot}/index.js"
        },
        {
            "type": "node",
            "request": "attach",
